{
  "name": "Flask Docker Dev Container",
  "build": {
    "dockerfile": "../Dockerfile", // Path to your Dockerfile
    "context": ".."               // Root of your project
  },
  "forwardPorts": [5000],        // Expose Flask's port
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",       // Python support
        "ms-azuretools.vscode-docker" // Docker extension
      ]
    }
  },
  "remoteUser": "vscode",         // Best practice (non-root user)
  "postCreateCommand": "pip install -r requirements.txt" // Optional
}